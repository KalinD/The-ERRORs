<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theerrors.xames.BasheMenuActivity"
    android:background="#ffffff">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_keyboard_arrow_left_black"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/btn_one_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="1 player"
        android:textSize="26sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_alignRight="@+id/btn_two_players"
        android:layout_alignLeft="@+id/btn_two_players"
        />
    <Button
        android:id="@+id/btn_two_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_one_player"
        android:layout_marginTop="36dp"
        android:text="2 players"
        android:textSize="26dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_two_players">

            <TextView
                android:id="@+id/tv_game_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/BachetInfo"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_below="@id/btn_two_players"
                android:visibility="invisible"
                />

        </ScrollView>


</RelativeLayout>
