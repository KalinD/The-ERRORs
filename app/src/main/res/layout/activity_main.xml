<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_wall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/logic_wall"
        android:textSize="45sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- pair of the first two games-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/pairOne_layout">
                <!-- Bashe Game image and name label-->
                <LinearLayout
                    android:id="@+id/gameOne_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_game_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="200dp"
                        android:minHeight="300dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="26dp"
                        android:clickable="true"
                        android:src="@drawable/game_menu_screenshot"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="26sp"
                        android:fontFamily="cursive"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="Bachet Game" />

                </LinearLayout>
                <!--Dudeli game image and name label-->
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   >
                   <ImageView
                       android:id="@+id/iv_game_two"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@color/white"
                       android:minWidth="200dp"
                       android:minHeight="300dp"
                       android:layout_marginTop="68dp"
                       android:layout_marginLeft="16dp"
                       android:src="@drawable/game_menu_screenshot"
                       android:clickable="true"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:fontFamily="cursive"
                       android:textColor="@color/colorPrimary"
                       android:textStyle="bold"
                       android:text="Dudeney Game"
                       android:textSize="26sp" />
               </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/pairTwo_layout"
                android:layout_below="@+id/pairOne_layout">
                <!-- EvenMania Game image and name label-->
                <LinearLayout
                    android:id="@+id/gameThree_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_game_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:minWidth="200dp"
                        android:minHeight="300dp"
                        android:layout_marginTop="26dp"
                        android:clickable="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="26sp"
                        android:fontFamily="cursive"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="EvenMania Game" />


                </LinearLayout>
                <!--Some game image and name label-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/iv_game_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:minWidth="200dp"
                        android:minHeight="300dp"
                        android:layout_marginTop="68dp"
                        android:layout_marginLeft="16dp"
                        android:clickable="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="26sp"
                        android:fontFamily="cursive"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="Some name" />



                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>



</LinearLayout>
